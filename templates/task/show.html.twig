{% extends 'base.html.twig' %}

{% block title %}Task
{% endblock %}

{% block body %}
	<div class="row text-center mt-2">
		<div class="col-sm-6">
			<h1>{{ task.title }}</h1>
		</div>
		<div class="col-sm-6">
			<a class="btn btn-info" href="{{ path('project.show', { 'id': project.id }) }}">{{ project.title }}</a>
			<a class="btn btn-primary" href="{{ path('task.edit', {'id': project.id, 'column_id': column.id, 'task_id': task.id}) }}">edit
				{{ task.title }}</a>
			{{ include('task/_delete_form.html.twig') }}
		</div>
	</div>

	<div class="row mt-3">
		<div class="col-sm-9">
			Description:
			{{ task.content }}
		</div>
		<div class="col-sm-3">
			Avant le :
			<span class="fst-italic">{{ task.deadLine ? task.deadLine|date('Y-m-d H:i:s') : '' }}</span>
		</div>
	</div>

{% endblock %}
